programa
{
	
	funcao inicio()
	{
		escreva("Média Aritmética - 6 Valores\n")
		
		inteiro valor1, valor2, valor3, valor4, valor5, valor6

		escreva("\nDigite o primeiro valor: ")
		leia(valor1)
		escreva("Digite o segundo valor: ")
		leia(valor2)
		escreva("Digite o terceiro valor: ")
		leia(valor3)
		escreva("Digite o quarto valor: ")
		leia(valor4)
		escreva("Digite o quinto valor: ")
		leia(valor5)
		escreva("Digite o sexto valor: ")
		leia(valor6)

		escreva("\nA média aritmética é: ", (valor1 + valor2 + valor3 + valor4 + valor5 + valor6) /6)
	
	}
}
